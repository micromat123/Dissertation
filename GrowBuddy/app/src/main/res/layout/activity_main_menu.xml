<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@color/myYellow"
    >

    <ImageView
        android:id="@+id/bigFlower"
        android:layout_width="157dp"
        android:layout_height="577dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/bigflowergrowth"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">


    </ImageView>

    <Button
        android:id="@+id/btn_Learn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-medium"
        android:text="Learn"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/myRed"
        app:layout_constraintTop_toBottomOf="@+id/btn_Meditate"
        />

    <Button
        android:id="@+id/btn_plantList"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif-medium"
        android:text="Plant List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Tasks"
        android:background="@color/myRed"/>

    <Button
        android:id="@+id/btn_Meditate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif-medium"
        android:text="Meditate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_plantList"
        android:background="@color/myRed"/>

    <Button
        android:id="@+id/btn_Tasks"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bigFlower"
        android:background="@color/myRed"
        />



</androidx.constraintlayout.widget.ConstraintLayout>